<div class="container padding-30">
	<% if current_admin.present? %>
	<%= render 'event_form' , event: @event, method: 'create' %>
	<% end %>

	<% unless @events.nil? %>
	<% @events.each do |event| %>

	<div class="col-md-12 text-center background-grey-tint well drop-shadow radius-25">


			<div class="col-md-4 padding-top-10 margin-vert-10 text-center">
				<%= link_to event_path(event) do %>
				<%= image_tag event.display_photo.url, class: "drop-shadow radius-25" %>
				<% end %>
			</div>


					<div class="zeromargin col-md-8 background-white well radius-25">
						<%= link_to event_path(event) do %>

						<div class="col-md-12 event-box background-white well text-center">
							<h3><%= "#{event.name}" %></h3>
						</div>

						<div class="event-box col-md-12 text-center background-white well text-left drop-shadow radius-25 padding-10 margin-10">
							<h4>Description:</h4><br>	<%= event.description %>
							<h4>When:</h4> <%= event.date %>
						</div>

						<div class="col-md-12 event-box text-center background-white well drop-shadow radius-25 padding-10 margin-10">
							<% if current_admin.present? %>
							<button type="button" class="btn-red drop-shadow">
								<span class="glyphicon glyphicon-erase" aria-hidden="true"></span>
								<%= link_to 'Destroy', event, method: :delete, class: "btn-red", :confirm => "Are you sure you wish to delete #{event.name}?" %>
							</button>
							<% end %>
						</div>


				</div>

	</div>
	<% end %>
	<% end %>
	<% end %>
</div>
