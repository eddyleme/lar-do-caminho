<div class="container">
  <div class="text-center well-lg background-white margin-top-50 drop-shadow">

<p id="notice"><%= notice %></p>
<h1>Albums</h1>
<% if current_admin.present? %>
  <%= render 'form', album: @album, method: 'create' %>
<% end %>

<% unless @albums.nil? %>
  <% @albums.each do |album| %>
    <div>
      <p>
        <%= link_to "#{album.album_title}", album_path(album) %>
      </p>
      <%= image_tag album.cover_photo.url %>
      <% if current_admin.present? %>
        <button>
          <%= link_to 'Destroy', album, method: :delete, :confirm => "you sure you want to delete?" %>
        </button>
    </div>
      <% end %>
  <% end %>
<% end %>


</div>

</div>
