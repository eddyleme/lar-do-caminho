<div class="container">
  <div class="text-center well-lg background-white margin-top-50 drop-shadow">

<h1>Reset password</h1>

    <%= form_for(@admin, url: password_reset_path(params[:id])) do |f| %>
      <%#= render 'shared/error_messages' %>

      <%= hidden_field_tag :email, @admin.email %>

      <%= f.label :password %>
      <%= f.password_field :password%>

      <%= f.label :password_confirmation%>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Update password"%>
    <% end %>
  </div>
</div>
