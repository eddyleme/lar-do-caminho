<h2>Log in</h2>
<% if flash.now[:notice] %>
<p class="error">
<%= flash.now[:notice] %>
</p>
<% end %>
<%= form_with scope: :session, url: sessions_path do |form| %>
<p>
<%= label_tag :email %>
<%= text_field_tag :email %>
</p> <p>
<%= label_tag :password %>
<%= password_field_tag :password %> </p>
<p><%= form.label :remember_me do %><%= form.check_box :remember_me %><span>Remember me on this computer</span><% end %></p>
<p>
<%= submit_tag 'Log in' %>
</p>
<p>forgot password? '
<%= link_to "click here", new_password_reset_path %>'</p>
<% end %>