<div class="container padding-60">
  <h2 class="text-center padding-bottom-10">Login</h2>
<% if flash.now[:notice] %>
<p class="error">
<%= flash.now[:notice] %>
</p>
<% end %>
<%= form_with scope: :session, url: sessions_path do |form| %>
<p class="text-center">
<%= label_tag :email %>
<%= text_field_tag :email %>
</p>
<p class="text-center">
<%= label_tag :password %>
<%= password_field_tag :password %> </p>
<p class="text-center"><%= form.label :remember_me do %><%= form.check_box :remember_me %> <span>Remember me on this computer</span> <% end %></p>

<p class="text-center">
<%= submit_tag'Log in' %>
</p>

<cite><p class="text-center">forgot password? '
<%= link_to "click here", new_password_reset_path %>'</p>
<% end %></cite>
</div>
